<Window x:Class="WpfApp2.AddWorkOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:WpfApp2.UserControls"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="AddWorkOrder" Height="600" Width="950"
        WindowState="Maximized">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>
    <Grid>
        <Border CornerRadius="7" Background="#ffffff" >
            <Border.Effect>
                <DropShadowEffect Direction="-130" BlurRadius="30" ShadowDepth="5" Opacity="0.1"/>
            </Border.Effect>

            <Grid Margin="20 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="83*"/>
                    <RowDefinition Height="52*"/>
                    <RowDefinition Height="31*"/>
                    <RowDefinition Height="83*"/>
                    <RowDefinition Height="83*"/>
                    <RowDefinition Height="83*"/>
                    <RowDefinition Height="83*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--Form Title-->
                <StackPanel Orientation="Horizontal" Margin="4,0,9,1" Grid.Row="1">
                    <Border CornerRadius="50" BorderThickness="1.5" BorderBrush="#EFEFEF">

                    </Border>

                    <TextBlock Text="Package Details" Foreground="#374655" FontSize="18" Margin="15 0 0 0" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="4,0,9,10" Grid.Row="4">
                    <Border CornerRadius="50" BorderThickness="1.5" BorderBrush="#EFEFEF">

                    </Border>

                    <TextBlock Text="Route Details" Foreground="#374655" FontSize="18" Margin="15 0 0 0" VerticalAlignment="Center"/>
                </StackPanel>

                <!--Form Percentage-->
                <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right" Margin="0,20,20,41" Grid.RowSpan="2"/>

                <Label Content="Work Order Date" HorizontalAlignment="Left" Margin="4,-60,5,0" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                <DatePicker Margin="5,0,5,0" Grid.Row="2"  Text="" Grid.Column="0" />
                <uc:MyTextBox Margin="5,0,5,0" Grid.Row="2" Grid.Column="1" Caption="Package"/>
                <uc:MyTextBox Margin="5,0,5,0" Grid.Row="2" Grid.Column="2" Caption="Package"/>
                
                <uc:MyTextBox Margin="5,0,5,0" Grid.Row="3" Grid.Column="0" Caption="Package Description"/>
                <uc:MyTextBox Margin="5,0,5,0" Grid.Row="3"  Grid.Column="1" Caption="Package Quantity"/>
                <uc:MyTextBox Margin="5,0,5,0" Grid.Row="3" Grid.Column="2" Caption="UNIT"/>

                <Label Content="Package Description" HorizontalAlignment="Left" Margin="4,-60,5,0" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
                <ComboBox Margin="5,0,5,0" Grid.Row="5"  Text="" Grid.Column="0" Height="35">
                    <ComboBoxItem Content="Coffie"></ComboBoxItem>
                    <ComboBoxItem Content="Tea"></ComboBoxItem>
                    <ComboBoxItem Content="Orange Juice"></ComboBoxItem>
                    <ComboBoxItem Content="Milk"></ComboBoxItem>
                    <ComboBoxItem Content="Iced Tea"></ComboBoxItem>
                    <ComboBoxItem Content="Mango Shake"></ComboBoxItem>
                </ComboBox>
                <uc:MyTextBox Margin="5,0,5,0" Grid.Row="5" Grid.Column="1" Caption="Package Quantity"/>
                <uc:MyTextBox Margin="5,0,5,0" Grid.Row="5" Grid.Column="2" Caption="UNIT"/>

            </Grid>
        </Border>

    </Grid>
</Window>
